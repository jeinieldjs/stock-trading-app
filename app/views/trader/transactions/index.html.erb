  <div class="portfolio-wrapper">
  <div class="portfolio-container">
    <h2 class="port-header">Transaction History</h2>
    <table>
      <thead class="portfolio-th">
        <tr class="portfolio-tr">
          <th>Transaction ID</th>
          <th>Transaction Type</th>
          <th>Stock (symbol)</th>
          <th>Quantity</th>
          <th>Price during Transaction</th>
          <th>Total Price</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody class="portfolio-td">
        <% @transactions.each do |transaction| %>
          <%= render(partial: 'transaction', locals: { transaction: transaction }) %>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'Back to Dashboard', trader_dashboard_index_path, class: 'btn btn-primary' %>
    <%= link_to 'Go To Portfolio', trader_portfolios_index_path, class: 'btn btn-primary' %>
  </div>
