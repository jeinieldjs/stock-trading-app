<!-- Portfolio Content -->
<div class="portfolio-wrapper">
<div class="portfolio-container">
<h1 class="port-header">Portfolio</h1>

<h3>Total Value: <%= @total %> </h3>
<table>
  <thead class="portfolio-th">
    <tr class="portfolio-tr">
      <th>Stock</th>
      <th>Current Unit Price</th>
      <th>Shares</th>
      <th>Total Price</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody class="portfolio-td">
    <% @portfolios.each do |portfolio| %>
      <%= render partial: 'portfolio', locals: { portfolio: portfolio } %>
    <% end %>
  </tbody>
</table>
<%= link_to 'Back to Dashboard', trader_dashboard_index_path, class: 'btn btn-primary' %>
