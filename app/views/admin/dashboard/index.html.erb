<div class="wrapper">
<div class="sidebar">
  <div class="logo-container">
    <%= image_tag("logo.png", alt: "logo", class: "admin-logo", style: "max-width: 90px;") %>
    <span class="website-name">Stock Harbor</span>
  </div>
    <div class="menu-items">
      <%= link_to 'Add New User', new_admin_dashboard_path %>
      <%= link_to 'See All Users', '/admin/dashboard/all_users' %>
      <%= link_to 'Pending Trader Sign Ups', '/admin/dashboard/pending_sign_ups' %>
      <%= link_to 'See All Transactions', admin_transactions_index_path %>

      <hr class="menu-divider">
      <%= link_to 'Account Summary', '#', class: 'custom-link dividends' %>
      <%= link_to 'Stock Alerts', '#', class: 'custom-link stock-alerts' %>
      <%= link_to 'Market Analysis', '#', class: 'custom-link market-analysis' %>
      <%= link_to 'Risk Management', '#', class: 'custom-link risk-management' %>
      <%= link_to 'Tax Information', '#', class: 'custom-link tax-information' %>
     
      
      <hr class="menu-divider">
      <%= link_to 'Mobile App', '#', class: 'custom-link mobile-app' %>
      <%= link_to 'Watchlist', '#', class: 'custom-link watchlist' %>
      <%= link_to 'Research', '#', class: 'custom-link research' %>
      <%= link_to 'Dividends', '#', class: 'custom-link dividends' %>
      <%= link_to 'Settings', '#', class: 'custom-link settings' %>
      <%= link_to 'Reports', '#', class: 'custom-link reports' %>
      <%= link_to 'Educational Resources', '#', class: 'custom-link educational-resources' %>
      <%= link_to 'Support', '#', class: 'custom-link support' %>
      <%= link_to 'Sign Out', destroy_user_session_path, data: { turbo_method: :delete }, style: 'color: white;' %>

    
    </div>
 
  </div>

  <!-- Main Content -->
<div class="admin-content">
  <div class="admin-wrapper">
  <h1 class="wrapper-header">Welcome, <span style="color: #21ce99;"><%= current_user.first_name %></span>!</h1>

    
    <div class="table-box">
      <h1 class="stock-heading">Current Stock Prices</h1>
      <table class="stock-table">
        <thead>
          <tr>
            <th>Symbol</th>
            <th>Company Name</th>
            <th>Latest Price</th>
            <th>Change Percent</th>
            <th>Volume</th>
          </tr>
        </thead>
        <tbody>
          <% @stock_prices.each do |stock_price| %>
            <tr>
              <td><%= stock_price.symbol %></td>
              <td><%= stock_price.company_name %></td>
              <td>$<%= stock_price.latest_price %></td>
              <td><%= stock_price.change_percent %></td>
              <td><%= stock_price.iex_volume %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>


    <div class="flex-container">
    <div class="news-box">
    <h1 class="news-heading">Market News</h1>
    <% @market_news.each do |article| %>
      <div class="news-article">
        <h3 class="article-title"><%= article['headline'] %></h3>
        <p class="article-source">Source: <%= article['source'] %></p>
      </div>
    <% end %>
  </div>
  
  <div class="graph-box">
  <h1 class="box-heading">Stock Prices Graph</h1>
  <div id="stockGraph"></div>
</div>

</div>
</div>
</div>

  

  
