<div class="wrapper">
  <!-- Sidebar -->
  <div class="sidebar">
    <h1>Hello, <%= current_user.first_name %>!</h1>
    <button type="button" class="btn btn-primary btn-block mt-2" data-bs-toggle="modal" data-bs-target="#addUserModal">
      Add New User
    </button>
  <button type="button" class="btn btn-warning btn-block mt-2" data-bs-toggle="modal" data-bs-target="#editUserModal">
    Edit User
  </button>
  <button type="button" class="btn btn-info btn-block mt-2" data-bs-toggle="modal" data-bs-target="#viewUserModal">
    View User
  </button>
  <button type="button" class="btn btn-secondary btn-block mt-2" data-bs-toggle="modal" data-bs-target="#userListModal">
    See All Users
  </button>
  <button type="button" class="btn btn-success btn-block mt-2" data-bs-toggle="modal" data-bs-target="#approveTraderModal">
    Approve Trader
  </button>
  <button type="button" class="btn btn-warning btn-block mt-2" data-bs-toggle="modal" data-bs-target="#pendingTradersModal">
    Pending Trader Sign Ups
  </button>
  <button type="button" class="btn btn-info btn-block mt-2" data-bs-toggle="modal" data-bs-target="#transactionListModal">
    See All Transactions
  </button>
  <%= link_to 'Sign Out', destroy_user_session_path, data: { turbo_method: :delete }, style: 'color: white;' %>
</div>


<!-- Main Content -->
<div class="content">
  <div class="graph-container" id="chartFrame" data-turbo-frame="chartFrame">
    <canvas id="stockChart"></canvas>
    <div class="bottom-info">
      <p class="total-value">Total Value: $19,710.45</p>
      <p class="today">Today: $51.21 (+0.25%)</p>
      <p class="buying-power">Buying Power: $6,151.79</p>
    </div>
  </div>
</div>

</div>
