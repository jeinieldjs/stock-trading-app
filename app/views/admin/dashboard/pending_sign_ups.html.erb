<div class='admin-dash-wrapper'>
  <div class='add-new-trader'>
    <%= link_to 'Add New Trader', new_admin_dashboard_path, class: 'btn btn-primary' %>
  </div>

  <div class='pending-traders'>
    <h1 class='mb-4'>Pending Trader Applications</h1>
    <% @pending_traders.each do |trader| %>
      <div class='trader-card'>
        <h3 class='mb-2'>
          <%= "#{trader.first_name} #{trader.last_name}" %>
        </h3>
        <p>Email: <%= trader.email %></p>
        <p>Registration Date: <%= trader.created_at.in_time_zone('Asia/Manila').strftime('%d %b %Y %H:%M') %></p>
        <%= render 'edit_status_form', trader: trader %>
      </div>
    <% end %>
  </div>


</div>
