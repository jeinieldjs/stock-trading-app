<div class="wrapper">
<!-- Sidebar -->
<div class="sidebar">
<div class="logo-container">
  <%= image_tag("logo.png", alt: "logo", class: "admin-logo", style: "max-width: 90px;") %>
  <span class="website-name">Stock Harbor</span>
  </div>
  <!-- <h1>Hello, <%= current_user.first_name %>!</h1> -->
  <div class="menu-items">
    <%= link_to 'Add New User', new_admin_dashboard_path %>
    <%= link_to 'See All Users', '/admin/dashboard/all_users' %>
    <%= link_to 'Pending Trader Sign Ups', '/admin/dashboard/pending_sign_ups' %>
    <%= link_to 'See All Transactions', admin_transactions_index_path %>
    <%= link_to 'Sign Out', destroy_user_session_path, data: { turbo_method: :delete }, style: 'color: white;' %>
  </div>
</div>

<div class='show-container'>
  <div class='show-card'>
    <div class='card-header'>
      <h1 class='card-title'>User Details</h1>
    </div>
    <div class='card-body'>
      <h2 class='user-name'><%= "#{@user.first_name} #{@user.last_name}" %></h2>
      <p class='card-text'>User ID: <%= @user.id %></p>
      <p class='card-text'>Email: <%= @user.email %></p>
      <p class='card-text'>Role: <%= @user.role %></p>
      <p class='card-text'>Status: <%= @user.status %></p>
      <p class='card-text'>Registration Date: <%= @user.created_at.in_time_zone('Asia/Manila').strftime('%d %b %Y %H:%M') %></p>
    </div>
    <div class='card-footer'>
      <%= link_to 'Edit User Info', edit_admin_dashboard_path(@user), class: 'btn btn-primary' %>
    </div>
  </div>
</div>

