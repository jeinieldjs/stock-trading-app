<video id="video-background" autoplay loop muted>
    <source src="/assets/backgroundv.mp4" type="video/mp4">
    Your browser does not support the video tag.
  </video>
  <div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <div class="text-center mb-4">
            <%= image_tag("logo.png", alt: "logo", class: "img-fluid", style: "max-width: 100px;") %>
          </div>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :first_name, style: "color: #fff;" %>
              <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "Enter Your First Name" %>
            </div>

            <div class="form-group">
              <%= f.label :last_name, style: "color: #fff;" %>
              <%= f.text_field :last_name, class: "form-control", placeholder: "Enter Your Last Name" %>
            </div>

            <div class="form-group">
              <%= f.label :email, style: "color: #fff;" %>
              <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "Enter Your Email" %>
            </div>

            <div class="form-group">
              <%= f.label :password, style: "color: #fff;" %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Enter Your Password" %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, style: "color: #fff;" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm Your Password" %>
            </div>
<!--
            <div class="form-group">
              <%= f.label :role, style: "color: #fff;" %>
              <%= f.select :role, User.roles.keys.map { |role| [role.humanize, role] }, { prompt: 'Select Role' }, class: "form-control" %>
            </div>
-->
            <div class="form-group">
              <%= f.label :role, style: "color: #fff;" %>
              <%= f.hidden_field :role, value: 'trader' %>
              <label>
                <%= radio_button_tag 'user_role', 'trader', true %>
                Trader
              </label>
           </div>

            <div class="form-group">
              <%= f.submit "Sign up", class: "btn btn-primary" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>


